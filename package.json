{
  "name": "language-learning-chrome-extension",
  "version": "1.0.0",
  "description": "Chrome Extension for interactive language learning using built-in AI APIs",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "lint:eslint": "eslint src --ext .ts,.js",
    "lint:eslint:fix": "eslint src --ext .ts,.js --fix",
    "lint:manifest": "prettier --check manifest.json",
    "lint:extension": "oxlint src && pnpm run lint:manifest",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "build": "tsc && pnpm run copy-assets && pnpm run fix-imports",
    "copy-assets": "node scripts/copy-assets.js",
    "fix-imports": "node scripts/fix-imports.js",
    "convert-icons": "node scripts/convert-icons.js",
    "generate-icons": "node scripts/generate-icons.js",
    "dev": "tsc --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "validate:extension": "pnpm run lint:extension && pnpm run test && pnpm run build",
    "lint:switch": "node scripts/lint-switcher.js",
    "preinstall": "npx only-allow pnpm",
    "gitignore:dev": "node scripts/manage-gitignore.cjs dev",
    "gitignore:main": "node scripts/manage-gitignore.cjs main",
    "cleanup:preview": "node scripts/preview-cleanup.cjs",
    "cleanup:github": "node scripts/cleanup-for-github.cjs",
    "release:prepare": "pnpm run validate:extension && pnpm run gitignore:main && pnpm run cleanup:github"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "oxlint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "manifest.json": [
      "prettier --write"
    ],
    "src/**/*.{html,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "chrome-extension",
    "language-learning",
    "ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/chrome": "^0.1.22",
    "@types/mozilla__readability": "^0.4.2",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "chrome-types": "^0.1.381",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "oxlint": "^1.23.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0"
  }
}
